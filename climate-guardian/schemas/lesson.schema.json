{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/lesson.schema.json",
  "title": "Climate Guardian Lesson",
  "type": "object",
  "required": ["title", "slides"],
  "properties": {
    "lesson": { "type": "integer", "minimum": 1 },
    "title": { "type": "string", "minLength": 1 },
    "duration": { "type": "integer", "minimum": 1 },
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "cover",
              "objective",
              "video",
              "concept",
              "chart",
              "interaction",
              "discussion",
              "summary",
              "title",
              "text"
            ]
          },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "content": { "type": "string" },
          "duration": { "type": "integer", "minimum": 1 },
          "bullets": { "type": "array", "items": { "type": "string" } },
          "points": { "type": "array", "items": { "type": "string" } },
          "questions": { "type": "array", "items": { "type": "string" } },
          "question": { "type": "array", "items": { "type": "string" } },
          "video": { "type": "string" },
          "placeholder": { "type": "string" },
          "task": { "type": "string" },
          "chartType": { "type": "string", "enum": ["line", "bar", "heatmap"] },
          "dataSrc": { "type": "string" },
          "src": { "type": "string" },
          "data": { "type": "string" },
          "body": { "type": "string" },
          "description": { "type": "string" }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "cover" } } },
            "then": {
              "properties": { "title": { "type": "string" } },
              "required": ["title"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "objective" } } },
            "then": {
              "properties": {
                "title": { "type": "string" },
                "bullets": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["title", "bullets"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "video" } } },
            "then": {
              "properties": {
                "title": { "type": "string" },
                "video": { "type": "string" }
              },
              "required": ["title", "video"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "concept" } } },
            "then": {
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "chart" } } },
            "then": {
              "anyOf": [
                {
                  "properties": {
                    "chartType": { "type": "string", "enum": ["line", "bar", "heatmap"] },
                    "dataSrc": { "type": "string" }
                  },
                  "required": ["chartType", "dataSrc"]
                },
                {
                  "properties": {
                    "chartType": { "type": "string", "enum": ["line", "bar", "heatmap"] },
                    "src": { "type": "string" }
                  },
                  "required": ["chartType", "src"]
                },
                {
                  "properties": {
                    "chartType": { "type": "string", "enum": ["line", "bar", "heatmap"] },
                    "data": { "type": "string" }
                  },
                  "required": ["chartType", "data"]
                },
                {
                  "properties": {
                    "dataSrc": { "type": "string" }
                  },
                  "required": ["dataSrc"]
                }
              ]
            }
          },
          {
            "if": { "properties": { "type": { "const": "interaction" } } },
            "then": {
              "properties": {
                "title": { "type": "string" },
                "task": { "type": "string" }
              },
              "required": ["title", "task"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "discussion" } } },
            "then": {
              "anyOf": [
                {
                  "properties": {
                    "title": { "type": "string" },
                    "questions": { "type": "array", "items": { "type": "string" } }
                  },
                  "required": ["title", "questions"]
                },
                {
                  "properties": {
                    "title": { "type": "string" },
                    "question": { "type": "array", "items": { "type": "string" } }
                  },
                  "required": ["title", "question"]
                }
              ]
            }
          },
          {
            "if": { "properties": { "type": { "const": "summary" } } },
            "then": {
              "anyOf": [
                {
                  "properties": {
                    "title": { "type": "string" },
                    "bullets": { "type": "array", "items": { "type": "string" } }
                  },
                  "required": ["title", "bullets"]
                },
                {
                  "properties": {
                    "title": { "type": "string" },
                    "points": { "type": "array", "items": { "type": "string" } }
                  },
                  "required": ["title", "points"]
                }
              ]
            }
          },
          {
            "if": { "properties": { "type": { "const": "title" } } },
            "then": {
              "properties": { "content": { "type": "string" } },
              "required": ["content"]
            }
          },
          {
            "if": { "properties": { "type": { "const": "text" } } },
            "then": {
              "anyOf": [
                { "properties": { "content": { "type": "string" } }, "required": ["content"] },
                { "properties": { "data": { "type": "string" } }, "required": ["data"] },
                { "properties": { "question": { "type": "array", "items": { "type": "string" } } }, "required": ["question"] },
                { "properties": { "questions": { "type": "array", "items": { "type": "string" } } }, "required": ["questions"] },
                { "properties": { "body": { "type": "string" } }, "required": ["body"] },
                { "properties": { "description": { "type": "string" } }, "required": ["description"] }
              ]
            }
          }
        ]
      }
    }
  }
}